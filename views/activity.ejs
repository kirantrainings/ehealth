    <main role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="jumbotron">
        <div class="container">
        <div class="row">
            <div class="col-sm-3">
            <table class="table table-hover table-striped">
                <thead>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>Role</th>
                <thead>
                <tbody>
                <% if(users){ %>
                    <% for(var i=0; i < users.length; i++) { %>
                    <tr class="selectuser">
                    <td><%= i+1 %></td>
                    <td><%= users[i].username %></td>
                    <td><%= users[i].role %></td>
                    </tr>
                    <% } } %>

                </tbody>

            </table>
            </div>
         <div class="col-sm-6">
            <div class="row">
                <button id="btnHeartRate" class="btn btn-primary">Heart Rate</button>
                <button id="btnHeartRate" class="btn btn-primary">Walking</button>
            </div>
            <div id="container"></div>
         </div>
         </div>
        </div>
      </div>
     
 <!-- /container -->
    </main>

    <footer class="container">
